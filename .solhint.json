{
  "extends": "solhint:recommended",
  "rules": {
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true,
        "var-name-mixedcase": [
          "warn",
          {
            "constants": "allow-uppercase",
            "avoid-low-level-calls": "off"
          }
        ]
      }
    ],
    "max-line-length": [
      "off"
    ],
    "no-unused-vars": "warn"
  }
}